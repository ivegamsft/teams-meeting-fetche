{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.25/MicrosoftTeams.schema.json",
  "version": "1.0.8-dev",
  "manifestVersion": "1.25",
  "id": "26464cb0-4c2c-4e0f-9a5d-de53b1234567",
  "developer": {
    "name": "Your Organization",
    "websiteUrl": "https://localhost:3000",
    "privacyUrl": "https://localhost:3000/privacy",
    "termsOfUseUrl": "https://localhost:3000/terms"
  },
  "name": {
    "short": "Meeting Fetcher (Dev)",
    "full": "Teams Meeting Fetcher (Development)"
  },
  "description": {
    "short": "DEV: Automatically record and transcribe Teams meetings",
    "full": "Teams Meeting Fetcher (Development) - Automatically record and transcribe Teams meetings"
  },
  "icons": {
    "color": "icon-color.png",
    "outline": "icon-outline.png"
  },
  "accentColor": "#004578",
  "permissions": ["identity"],
  "validDomains": ["${{BOT_DOMAIN}}"],
  "defaultInstallScope": "meetings",
  "defaultGroupCapability": {
    "team": "bot",
    "groupchat": "bot",
    "meetings": "tab"
  },
  "webApplicationInfo": {
    "id": "${{BOT_APP_ID}}"
  },
  "authorization": {
    "permissions": {
      "resourceSpecific": [
        {
          "name": "OnlineMeeting.ReadBasic.Chat",
          "type": "Application"
        },
        {
          "name": "OnlineMeetingTranscript.Read.Chat",
          "type": "Application"
        },
        {
          "name": "OnlineMeetingRecording.Read.Chat",
          "type": "Application"
        }
      ]
    }
  },
  "configurableTabs": [
    {
      "configurationUrl": "https://${{BOT_DOMAIN}}/dev/bot/config",
      "canUpdateConfiguration": false,
      "scopes": ["groupChat"],
      "context": ["meetingSidePanel", "meetingChatTab", "meetingDetailsTab"]
    }
  ],
  "bots": [
    {
      "botId": "${{BOT_APP_ID}}",
      "scopes": ["team", "groupChat"],
      "supportsFiles": false,
      "isNotificationOnly": false,
      "commandLists": [
        {
          "scopes": ["team", "groupChat"],
          "commands": [
            {
              "title": "Hi",
              "description": "Get a greeting from the bot"
            },
            {
              "title": "Help",
              "description": "Learn what this bot does"
            }
          ]
        }
      ]
    }
  ]
}
