# Example Terraform variables file for Azure deployment
# Copy to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars with real credentials!

environment      = "dev"
azure_region     = "eastus"
region_short     = "eus"

# Azure Service Principal credentials (get from your Azure admin)
# These values should match the ARM_* environment variables
azure_subscription_id = "<your-subscription-id>"
azure_tenant_id       = "<your-tenant-id>"
azure_client_id       = "<service-principal-client-id>"
azure_client_secret   = "<service-principal-client-secret>"

# Test User Configuration (optional)
# If create_test_user is true and test_user_principal_name is not set,
# Terraform will automatically use the default verified domain: tmftestuser@<default-domain>
create_test_user         = true
# test_user_principal_name = "customuser@yourdomain.onmicrosoft.com"  # Optional: defaults to tmftestuser@<default-domain>
test_user_display_name   = "TMF Test User"
test_user_password       = "ComplexPassword123!"  # Must meet Azure AD complexity requirements

# Note: Test user requires Domain.Read.All permission on the deployment SPN
# to automatically fetch the default domain. Grant in Azure Portal:
# Azure AD → App registrations → Your SPN → API permissions → Microsoft Graph → Domain.Read.All
